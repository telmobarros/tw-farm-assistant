{
	"manifest_version": 2,

	"name": "TW Farm Assistant [DEV]",
	"version": "0.3",
	"description": "Tribalwars farm assistant",
	"icons": {
		"16": "imgs/icon.png",
		"48": "imgs/icon.png",
		"128": "imgs/icon.png"
	},
	"options_page": "html/options.html",

	"browser_action": {
		"default_icon": "imgs/icon.png",
		"default_popup": "html/popup.html"
	},
	"content_scripts": [
		{
			"matches": [
				"*://*.die-staemme.de/*",
				"*://*.staemme.ch/*",
				"*://*.tribalwars.net/*",
				"*://*.tribalwars.nl/*",
				"*://*.plemiona.pl/*",
				"*://*.tribalwars.se/*",
				"*://*.tribalwars.com.br/*",
				"*://*.tribalwars.com.pt/*",
				"*://*.divokekmeny.cz/*",
				"*://*.triburile.ro/*",
				"*://*.voyna-plemyon.ru/*",
				"*://*.fyletikesmaxes.gr/*",
				"*://*.tribalwars.com/*",
				"*://*.divoke-kmene.sk/*",
				"*://*.klanhaboru.hu/*",
				"*://*.tribalwars.dk/*",
				"*://*.tribals.it/*",
				"*://*.klanlar.org/*",
				"*://*.guerretribale.fr/*",
				"*://*.guerrastribales.es/*",
				"*://*.tribalwars.ae/*",
				"*://*.tribalwars.co.uk/*",
				"*://*.vojnaplemen.si/*",
				"*://*.plemena.com/*",
				"*://*.tribalwars.asia/*",
				"*://*.tribalwars.us/*"
			],
			"js": [
				"js/vendor/jquery.js",
				"js/contentScripts/contentScript.js"
			]
		},

		{
			"matches": [
				"*://*.die-staemme.de/*",
				"*://*.staemme.ch/*",
				"*://*.tribalwars.net/*",
				"*://*.tribalwars.nl/*",
				"*://*.plemiona.pl/*",
				"*://*.tribalwars.se/*",
				"*://*.tribalwars.com.br/*",
				"*://*.tribalwars.com.pt/*",
				"*://*.divokekmeny.cz/*",
				"*://*.triburile.ro/*",
				"*://*.voyna-plemyon.ru/*",
				"*://*.fyletikesmaxes.gr/*",
				"*://*.tribalwars.com/*",
				"*://*.divoke-kmene.sk/*",
				"*://*.klanhaboru.hu/*",
				"*://*.tribalwars.dk/*",
				"*://*.tribals.it/*",
				"*://*.klanlar.org/*",
				"*://*.guerretribale.fr/*",
				"*://*.guerrastribales.es/*",
				"*://*.tribalwars.ae/*",
				"*://*.tribalwars.co.uk/*",
				"*://*.vojnaplemen.si/*",
				"*://*.plemena.com/*",
				"*://*.tribalwars.asia/*",
				"*://*.tribalwars.us/*"
			],
			"include_globs": ["*info_village*"],
			"js": [
				"js/utils.js",
				"js/contentScripts/addVillageButton.js"
			]
		}
	],
	"permissions": [
		"tabs",
		"activeTab",
		"storage",
		"https://ajax.googleapis.com/"
	]
}
